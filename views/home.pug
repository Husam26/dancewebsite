extends base.pug

block scripts
    script(src='/static/index.js')

block style
    style
        include ../static/style.css

block content
    // Picture Section
    section#picture-Section
        h2#typing-text Unleash Your Passion for Dance
        p Where Rhythm Meets Artistry

    // Mission Section with Cards Layout
    .container
        section#mission-Section
            h2 Our Mission
            p
                | At Dance Academy, our mission is to inspire and nurture a love for dance,
                | fostering creativity, discipline, and confidence. We provide a platform for
                | dancers of all levels to grow, express themselves, and reach their full potential.
            .cards-container
                .card
                    img(src="https://img.freepik.com/free-photo/young-couple-dancing-bachata_23-2149587507.jpg?t=st=1735128961~exp=1735132561~hmac=c6f1d823a27d844ba8b9974ce987bff8ec13a9ea3d5a562ebde3a919e8d9aee0&w=1060")
                    .card-header
                        h3 Expert Instructors
                    .card-body
                        p
                            | Our instructors are highly skilled professionals who are passionate about
                            | helping students reach their potential and excel in dance.
                .card
                    img(src="https://images.unsplash.com/photo-1504609813442-a8924e83f76e?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt="Supportive Community")
                    .card-header
                        h3 Supportive Community
                    .card-body
                        p
                            | We foster a positive and inclusive environment where dancers can thrive and grow.
                .card
                    img(src="https://images.unsplash.com/photo-1505527385992-63e06a393342?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt="Diverse Range of Classes")
                    .card-header
                        h3 Diverse Range of Classes
                    .card-body
                        p
                            | We offer a variety of classes for all skill levels, from beginners to advanced dancers.
            .cta-button
                a(href="/join") Join Our Community
            .cta-button2
                a(href="/about" class="btn btn-secondary") Know More About Us

    // Sponsors Section
    section#sponsors-section
        h2 Our Sponsors
        p
            | We are proud to collaborate with organizations that share our passion for
            | dance and creativity. Their support helps us bring the best to our community.
        .sponsors-container
            .sponsor-card
                img(src="https://weknowdance.com/cdn/shop/files/So_Danca_LOGO-black.png?height=628&pad_color=ffffff&v=1614393805&width=1200", alt="Sponsor 1")
                h4 So Danca
            .sponsor-card
                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRSn2oig0zobcRwjE4yEebqe5DKusehWDfclw&s", alt="Sponsor 2")
                h4 Ballet Rosa
            .sponsor-card
                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRr4i7U67QwiUHNwVLUl-3VoBZ0TmmltWL0FQ&s", alt="Sponsor 3")
                h4 Bird College
            .sponsor-card
                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRsgxA2U_738mWZJeAzLQhXgK69_rZPyha9YQ&s", alt="Sponsor 4")
                h4 Modern Dance

